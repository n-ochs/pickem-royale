generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email    String    @unique
  hash     String
  hashedRt String?
  @@map("users")
}

model League {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy Int
  updatedBy Int?
  name      String   @db.VarChar(30)
  ownerId   Int
  isPublic  Boolean
  sportId   Int
  sport StdSport @relation(fields: [sportId], references: [id])
  leagueTypeId Int
  leagueType StdLeagueType @relation(fields: [leagueTypeId], references: [id])
  @@map("leagues")
  @@index([sportId])
  @@index([leagueTypeId])
}

model StdSport {
  id  Int @id @default(autoincrement())
  adn String @db.VarChar(3) @unique
  name String @db.VarChar(50) @unique
  description String? @db.VarChar(100)
  leagues League[]
  @@map("std_sport")
}

model StdLeagueType {
  id  Int @id @default(autoincrement())
  adn String @db.VarChar(25) @unique
  name String @db.VarChar(50) @unique
  description String? @db.VarChar(100)
  leagues League[]
  @@map("std_league_type")
}